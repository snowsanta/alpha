

<%- include ("./partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">LogIn </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/login" method="POST">
                <div class="form-group">
                    <label>Username: </label><input type="text" class="form-control"name="username" autofocus placeholder ="user_name">
                </div>
               <div class="form-group">
                  <label>Password: </label><input type="password" class="form-control" name="password" placeholder ="password">
                  </div>
                 

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
           <p>New here? <a href="/register">Sign In</a> </p>
           <p>Forgot password? <a href="/forgot">Recover Here</a> </p>
        </div>
    </div>
</div>
<%- include ("./partials/footer") %>