<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create Profile For Your Specific Subject:</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/teachers" method="POST">
                <div class="form-group">
                    <label>Name:</label><input class="form-control" type="text" name="name" placeholder="name" required >
                </div>
                 <div class="form-group">
                    <label>Description:</label><input class="form-control" type="text" name="description" required placeholder="description">
                </div>
                <div class="form-group">
                    <label>Email:</label><input class="form-control" type="email" name="email" required placeholder="Email">
                </div>
                 
                <div class="form-group">
                <label for="experience">Experience:</label>
                    <select name="experience" class="form-control">
                     <option value="None">None</option>
                      <option value="Upto II Years">Upto II Years</option>
                      <option value="Upto V years">Upto V Years</option>
                     </select>
                    
                </div>
                <div class="form-group">
                    <label>Phone:</label><input class="form-control" type="text" name="phone" placeholder="Phone Number" required>
                </div>
                <div class="form-group">
                   <label for="address">Place of study:</label>
                    <select name="address" class="form-control">
                     <option value="Online">Online(Zoom/Meet)</option>
                      <option value="Home">Home</option>
                      <option value="Other">Other</option>
                     </select>
                     </div>
                <div class="form-group">
                    <label>Pin Code:</label><input class="form-control" type="text" name="pinCode" placeholder="Pin Code" required>
                </div>
                <div class="form-group">
                   <label for="subject">Subject:</label>
                    <select name="subject" class="form-control">
                     <option value="Maths">Maths</option>
                      <option value="Science">Science</option>
                      <option value="English">English</option>
                      <option value="Hindi/Sanscrit">Hindi/Sanscrit</option>
                      <option value="IT">IT</option>
                     </select>
                     </div>
                <div class="form-group">
                    <label>Age:</label><input class="form-control" type="text" required name="age" placeholder="Age">
                </div>
               
              
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
           <div> <a href="/teachers">Go Back</a> </div>
            <a>Profiles I owe:</a><p> Check any of your post and click on your Profile</p>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>